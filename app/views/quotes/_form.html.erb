<%= simple_form_for quote, html: { class: 'quote form' } do |f| %>
  <% if quote.errors.any? %>
    <div class="errr-message">
      <%= quote.errors.full_messages.to_setence.capitalize %>
    </div>
  <% end %>

  <%= f.input :name, input_html: { autofocus: true } %>
  <%= f.submit class: 'btn btn--secondary' %>
<% end %>
